# Hetzner API 配置
HETZNER_API_KEY=
# SSH 密钥 ID
HETZNER_SSH_KEYS=
# 流量阈值 (0.0-1.0, 默认 0.8 = 80%)
TRAFFIC_THRESHOLD=0.8
# 检查间隔（秒，默认 1200 = 20分钟）
CHECK_INTERVAL=1200

# 服务器类型优先级（多个用逗号分隔）
# ==============================================================================
# HETZNER SERVER CONFIGURATION REFERENCE
# 机型配置参考 (ID/核心/内存/磁盘/流量)
# ==============================================================================
# [CX 系列 - 标准型]
# CX33:  ID=115 | Cores=4  | RAM=8GB  | Disk=80GB  | Traffic=20TB (EU)
# CX43:  ID=116 | Cores=8  | RAM=16GB | Disk=160GB | Traffic=20TB (EU)
# CX53:  ID=117 | Cores=16 | RAM=32GB | Disk=320GB | Traffic=20TB (EU)
#
# [CPX 系列 - 高性能共享型]
# CPX22: ID=109 | Cores=2  | RAM=4GB  | Disk=80GB  | Traffic=20TB (EU) / 0.5TB (SIN)
# CPX32: ID=110 | Cores=4  | RAM=8GB | Disk=160GB | Traffic=20TB (EU) / 0.5TB (SIN)
# CPX42: ID=111 | Cores=8  | RAM=16GB | Disk=320GB | Traffic=20TB (EU) / 0.5TB (SIN)
# ==============================================================================
SERVER_TYPES=109,110,116



# 服务器数量限制（0=不限制，>0=最多维持该数量的服务器）
MAX_SERVERS=2

# ================================
# 时间窗口控制（新功能）
# ================================
# 是否启用时间窗口控制
ENABLE_TIME_WINDOW=true

# 工作开始时间（小时，24小时制）
WORK_START_HOUR=8

# 工作结束时间（小时和分钟）
WORK_END_HOUR=23
WORK_END_MINUTE=30

# 说明：
# - 支持跨午夜时段！例如 22:00-08:50 表示晚上10点到早上8点50分工作
# - 在工作时段内：正常监控和重建服务器
# - 工作时段结束后：自动删除所有服务器（例如 08:51 会删除）
# - 非工作时段：不执行任何操作，等待下一个工作时段
# - 下一个工作时段开始：恢复监控和重建

# 示例配置：
# 1. 白天工作：WORK_START_HOUR=8, WORK_END_HOUR=23, WORK_END_MINUTE=30
#    → 8:00-23:30 工作，23:31 删除服务器
# 2. 夜间工作：WORK_START_HOUR=22, WORK_END_HOUR=8, WORK_END_MINUTE=50
#    → 22:00-次日08:50 工作，08:51 删除服务器



# ================================
# 下载器 API 配置（新功能）
# ================================
# 下载器Vertex API端点 基础 URL（不要带末尾斜杠）
DOWNLOADER_API_URL=

# 下载器Vertex API端点访问 Cookies（完整的 Cookie 字符串）
DOWNLOADER_COOKIES=

# 说明：
# - 重建服务器后会自动更新所有 alias 包含 "Hetzner" 的下载器
# - 会将下载器配置中的旧 IP 替换为新 IP


# ================================
# Telegram 通知配置
# ================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
